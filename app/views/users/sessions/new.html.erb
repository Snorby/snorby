<%= title "Please log in to continue..." -%>

<div id='signin' class='grid_12 page boxit'>
	
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <p><%= f.label :email %><br />
	  <%= f.text_field :email, :title => 'E-mail...', :autocomplete => :off %></p>

	  <p><%= f.label :password %><br />
	  <%= f.password_field :password, :title => 'Password...', :autocomplete => :off %></p>

	  <% if devise_mapping.rememberable? -%>
	    <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
	  <% end -%>
		
		<%= form_actions do %>
		
			<%= button "Welcome, Login!", :class => 'success' %>
		
		<% end %>

	<% end %>
	
</div>